<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>jcinema</display-name>
	<welcome-file-list>
		<welcome-file>_index.jsp</welcome-file>
	</welcome-file-list>

	<!-- 서블릿(필터) 등록 (한글가능 캐릭터셋 필수등록요소) -->
	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<!-- 필터 액션주소 등록 (.do로 끝나는 요청은 이 아니라 모든 요청이 전부 필터를 먼저 거친다) -->
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/</url-pattern>
	</filter-mapping>

	<!-- 서블릿(컨트롤러) 등록 -->
	<servlet>
		<servlet-name>MainController</servlet-name>
		<servlet-class>kr.co.jcinema.controller.MainController</servlet-class>
	</servlet>
	<!-- 서블릿 액션주소 등록 -->
	<servlet-mapping>
		<servlet-name>MainController</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!-- img, css, js 등 자원 리소스를 컨트롤러에서 제외 -->	
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.css</url-pattern>
		<url-pattern>*.jpg</url-pattern>
		<url-pattern>*.js</url-pattern>
		<url-pattern>*.png</url-pattern>
		<url-pattern>*.ico</url-pattern>
		<url-pattern>*.swf</url-pattern>
		<url-pattern>*.gif</url-pattern>
	</servlet-mapping>
	

	<!-- 모델2 보안설정 -->
	<security-constraint>
		<display-name>JSP Protection</display-name>
		<web-resource-collection>
			<web-resource-name>secure pages</web-resource-name>
			<url-pattern>*.jsp</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>nobody</role-name>
		</auth-constraint>
	</security-constraint>
	<!-- index 예외설정 -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>free pages</web-resource-name>
			<url-pattern>/_index.jsp</url-pattern>
		</web-resource-collection>
	</security-constraint>
		<security-constraint>
		<web-resource-collection>
			<web-resource-name>free pages</web-resource-name>
			<url-pattern>/admin/_index.jsp</url-pattern>
		</web-resource-collection>
	</security-constraint>

	<security-role>
		<description>Nobody should be in this role so JSP files are protected from direct access.</description>
		<role-name>nobody</role-name>
	</security-role>
	
	


</web-app>